# Database Configuration
HALO_DB_PASSWORD=your_database_password_here
HALO_DB_NAME=halostatsapi
HALO_DB_USER=postgres
HALO_DB_HOST=halostatsapi
HALO_DB_PORT=5432

# Azure AD App Credentials (for Xbox authentication)
# Get these from: https://partner.xbox.com/en-us/dashboard
HALO_CLIENT_ID=your_client_id_here
HALO_CLIENT_SECRET=your_client_secret_here

# Players to Track
# Add the Xbox XUIDs and gamertags of players you want to track
# Format: JSON array with gamertag and xuid for each player
# Example: '[{"gamertag": "PlayerOne", "xuid": "1234567890123456"}, {"gamertag": "PlayerTwo", "xuid": "9876543210987654"}]'
# If not set, defaults to 5 example players
HALO_TRACKED_PLAYERS='[{"gamertag": "l 0cty l", "xuid": "2533274818160056"}, {"gamertag": "Zaidster7", "xuid": "2533274965035069"}, {"gamertag": "l P1N1 l", "xuid": "2533274804338345"}, {"gamertag": "l Viper18 l", "xuid": "2535430400255009"}, {"gamertag": "l Jordo l", "xuid": "2533274797008163"}]'

# Optional Configuration
HALO_REDIRECT_URI=http://localhost
HALO_MATCH_LIMIT=500
HALO_UPDATE_INTERVAL=60
HALO_CACHE_TTL=30
HALO_WEB_PORT=8090
HALO_DATA_DIR=/data
